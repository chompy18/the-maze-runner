files:
    "/etc/cron.d/mazebackup":
        mode: "000644"
        owner: root
        group: root
        content: |
            * * * * * root /usr/local/bin/mazebackup.sh

    "/usr/local/bin/mazebackup.sh":
        mode: "000755"
        owner: root
        group: rootbackup
        content: |
            #!/bin/bash
            touch /var/app/current/dungeon.db
            /usr/bin/aws s3 cp /var/app/current/dungeon.db s3://maze-prod --region eu-central-1
            exit 0

commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/*.bak"
